@page
@using Spice.Utility
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h2 class="text-info">Create New Account</h2>

<hr />
<div class="row rounded p-3 border bg-white">
    <div class="col-md-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Name" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.Name" class="form-control" />
                </div>

                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Email" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.Email" class="form-control" />
                </div>

                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.PhoneNo" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.PhoneNo" class="form-control" />
                </div>

                <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.StreetAdress" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.StreetAdress" class="form-control" />
                </div>

                <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.PostCode" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.PostCode" class="form-control" />
                </div>

                <span asp-validation-for="Input.PostCode" class="text-danger"></span>
            </div>




            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.city" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.city" class="form-control" />
                </div>

                <span asp-validation-for="Input.city" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.Password" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.Password" class="form-control" />
                </div>

                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.ManagerUser))
            {
                <div class="form-group row">
                    <div class="col-3">

                    </div>
                    <div class="col-5">
                        <input type="radio" name="UserRole" value="@SD.KitchenUser" checked />@SD.KitchenUser
                        <input type="radio" name="UserRole" value="@SD.FrontDeskUser" checked />@SD.FrontDeskUser
                        <input type="radio" name="UserRole" value="@SD.ManagerUser" checked />@SD.ManagerUser
                    </div>

                </div>
            }
            <div class="form-group row">
                <div class="col-8">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
