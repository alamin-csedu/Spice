@model IEnumerable<Spice.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<div class="container border m-5 background-white">
    <div class="row m-4 p-">
        <div class="col-10">
            <h1>Category List</h1>
        </div>
        <div class="col-2 align-middle">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Create New</a>

        </div>
    </div>

    <div class="border m-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        <h4 class="font-weight-bold "> @Html.DisplayNameFor(model => model.Name)</h4>
                    </th>
                    <th></th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="font-weight-bold"> @Html.DisplayFor(modelItem => item.Name)</p>
                        </td>
                        <td class="text-right">
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-list"></i></a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
