@model Spice.Models.Coupon

@{
    ViewData["Title"] = "Edit";
}

<h1>Update Coupon</h1>
<hr />
<br />
<br />
<div class="row rounded bg-white p-3 ">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouponType" class="control-label"></label>
                <input asp-for="CouponType" class="form-control" />
                <span asp-validation-for="CouponType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinimumAmount" class="control-label"></label>
                <input asp-for="MinimumAmount" class="form-control" />
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.Picture" width="100%" style="border-radius: 10px" />
                <label asp-for="Picture" class="control-label"></label>
                <input type="file" asp-for="Picture" class="form-control"></input>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isActive" /> @Html.DisplayNameFor(model => model.isActive)
                </label>
            </div>
            <div class="row ">
                <div class="form-group col-6">
                    <input type="submit" value="Edit" class="btn btn-block btn-primary" />
                </div>
                <div class="col-6 text-right">
                    <a class="btn btn-block btn-success" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
