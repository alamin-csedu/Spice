@model IEnumerable<MenuItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@


@if(Model.Count() > 0)
            {
<div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-restaurent">
    <div class="row">
        <h2 class="text-success">@Model.FirstOrDefault().Category.Name</h2>
    </div>


    @foreach (var item in Model)
    {
        <div class="border border-info rounded col-12" style="margin-top:10px;margin-bottom:10px;padding:10px">
            <div class="row">
                <div class="col-md-3 col-sm-12">
                    <img height="200px" src="@item.Image" width="99%" style="border-radius:5px;border: 2px solid #ff6a00" />
                </div>
                <div class="col-md-9 col-sm-12">
                    <div class="row">
                        <div class="col-8">
                            @item.Name
                            @if (item.Spicyness == "1")
                            {
                                <img src="~/images/mild.png" />
                            }
                            else if (item.Spicyness == "2")
                            {
                                <img src="~/images/spicy.png" />
                            }
                            else if (item.Spicyness == "3")
                            {
                                <img src="~/images/verySpicy.png" />
                            }
                        </div>
                        <div class="col-4">
                            @item.Price
                        </div>
                    </div>
                    <div class="col-12 row text-justify d-md-block d-none">
                        @Html.Raw(item.Description)
                    </div>

                </div>
            </div>
        </div>
    }
</div>
}